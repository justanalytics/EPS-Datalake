{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "context_stage_mappings": {
      "type": "array",
      "minProperties": 1,
      "items": {
        "type": "object",
        "properties": {
          "context": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
              "^*$": {
                "type": "string"
              }
            }
          },
          "rerun_batch": {
            "type": "boolean"
          },
          "period": {
            "type": "integer"
          },
          "stage_pairs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "stages": {
            "type": "array",
            "items": {
              "type": "object",
              "minProperties": 1,
              "properties": {
                "name": {
                  "type": "string"
                },
                "rerun_batch": {
                  "type": "boolean"
                },
                "partial_load": {
                  "type": "boolean"
                },
                "job_groups": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                },
                "validate_sql": {
                  "type": "string"
                }
              },
              "required": ["name","job_groups"],
              "additionalProperties": false
            }
          }
        },
        "required": ["context", "stages"],
        "additionalProperties": false
      }
    },
    "version": {
      "type": "integer"
    }
  },
  "required": ["context_stage_mappings"],
  "additionalProperties": false
}
