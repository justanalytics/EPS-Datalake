{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "job": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["processing"]
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "import": {
      "type": "object",
      "properties": {
        "parent": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["job", "source", "schema", "target", "reject"]
          }
        }
      },
      "required": ["parent"],
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "incremental": {
          "type": "boolean"
        },
        "additional_columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": ["string", "number"]
              },
              "framework_column": {
                "type": "string"
              },
              "value": {
                "type": ["string","number"]
              },
              "framework_generated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "properties": {
          "type": "object",
          "properties": {
            "table":{
              "type": "string"
            },
            "filter":{
              "type": "string"
            },
            "sql":{
              "type": "string"
            },
            "pre_sql": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "post_sql": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "table_dependency": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["endpoint", "properties"],
      "additionalProperties": false
    },
    "target": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "operation": {
          "type": "string"
        },
        "soft_delete": {
          "type": "boolean"
        },
        "truncate_partition_columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": ["string", "number"]
              },
              "value": {
                "type": ["string", "number"]
              },
              "data_type":{
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false
        },
        "primary_key_columns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "merge_columns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "properties": {
          "type": "object",
          "properties": {
            "table": {
              "type": "string"
            },
            "table_dependency": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "pre_sql": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "post_sql": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "template": {
              "type": "string"
            },
            "history_columns": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["table"],
          "additionalProperties": false
        }
      },
      "required": ["endpoint","properties"],
      "additionalProperties": false
    },
    "version": {
      "type": "integer"
    }
  },
  "required": ["job", "source", "target"],
  "additionalProperties": false
}
