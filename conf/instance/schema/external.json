{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "job": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["external"]
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "import": {
        "type": "object",
        "properties": {
          "parent": {
            "type": "string"
          },
          "sections": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["job", "config"]
            }
          }
        },
        "required": ["parent"],
        "additionalProperties": false
    },
    "config": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "properties": {
            "script": {
              "type": "string"
            }
          },
          "required": ["script"],
          "additionalProperties": false
        }
      },
      "required": ["endpoint", "properties"],
      "additionalProperties": false
    },
    "version": {
      "type": "integer"
    },
    "lineage": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "lineages": {
      "type": "object",
      "properties": {
        "source": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "endpoint": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "table": {
                    "type": "string"
                  },
                  "source_file_pattern": {
                    "type": "string"
                  }
                },
                "minProperties": 1,
                "additionalProperties": false
              }
            },
            "required": ["endpoint", "properties"],
            "additionalProperties": false
          }
        },
        "target": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "endpoint": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "table": {
                    "type": "string"
                  },
                  "source_file_pattern": {
                    "type": "string"
                  }
                },
                "minProperties": 1,
                "additionalProperties": false
              }
            },
            "required": ["endpoint", "properties"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["job", "config"],
  "additionalProperties": false
}
