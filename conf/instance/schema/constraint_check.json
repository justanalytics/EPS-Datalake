{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "job": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["constraint_checks"]
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "import": {
      "type": "object",
      "properties": {
        "parent": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["job", "source", "validation_rules"]
          }
        }
      },
      "required": ["parent"],
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "primary_keys": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "grouping_columns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "properties": {
          "type": "object",
          "properties": {
            "table":{
              "type": "string"
            },
            "filter":{
              "type": "string"
            },
            "sql":{
              "type": "string"
            },
            "table_dependency": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["endpoint", "primary_keys", "properties"],
      "additionalProperties": false
    },
    "validation_rules": {
      "type": "object",
      "patternProperties": {
        "^*$": {
          "type": "object",
          "properties": {
            "sql": {
              "type": "string"
            },
            "constraint_data": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["sql"]
        }
      }
    },
    "version": {
      "type": "integer"
    }
  },
  "required": ["job", "source", "validation_rules"],
  "additionalProperties": false
}
